@page
@model ListaDeProgramasEnRazo.Pages.programa1Model
@{
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" integrity="sha384-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX" crossorigin="anonymous">
    <title>Calcula tu índice de masa corporal</title>
</head>
<body>
    <div class="container mt-5">
        <h3>Calcula tu índice de masa corporal</h3>
        <form method="post">
            <div class="mb-3">
                <label for="peso" class="form-label">PESO:</label>
                <input placeholder="Ingresa tu peso en kg" type="number" class="form-control" asp-for="peso" />
            </div>
            <div class="mb-3">
                <label for="altura" class="form-label">ALTURA:</label>
                <input placeholder="Ingresa tu altura en cm" type="number" class="form-control" asp-for="altura" />
            </div>
            <div class="mb-3">
                <input type="submit" class="btn btn-primary" value="Calcular" />
            </div>

            @if (Model.Calculo != 0)
            {
                <div class="mb-3">
                    <strong>IMC = @Model.Calculo</strong>
                </div>
                <div class="mb-3">
                    @switch (Model.Calculo)
                    {
                        case var n when n < 18:
                            <img src="~/img/IMC-1.png" class="img-fluid" alt="Peso Bajo" />
                            break;

                        case var n when n >= 18 && n < 25:
                            <img src="~/img/IMC-2.png" class="img-fluid" alt="Peso Normal" />
                            break;

                        case var n when n >= 25 && n < 27:
                            <img src="~/img/IMC-3.png" class="img-fluid" alt="Sobre Peso" />
                            break;

                        case var n when n >= 27 && n < 30:
                            <img src="~/img/IMC-4.png" class="img-fluid" alt="Obesidad grado I" />
                            break;

                        case var n when n >= 30 && n < 40:
                            <img src="~/img/IMC-5.png" class="img-fluid" alt="Obesidad grado II" />
                            break;

                        case var n when n >= 40:
                            <img src="~/img/IMC-6.png" class="img-fluid" alt="Obesidad grado III" />
                            break;

                        default:
                            <div>
                                <strong>Por favor ve a urgencias</strong>
                            </div>
                            break;
                    }
                </div>
            }
        </form>
    </div>
</body>
</html>
