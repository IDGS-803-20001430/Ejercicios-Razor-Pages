@page
@model ListaDeProgramasEnRazo.Pages.programa2Model
@{
    ViewData["Title"] = "Cifrado César";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" integrity="sha384-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX" crossorigin="anonymous">
    <title>@ViewData["Title"]</title>
</head>
<body>
    <div class="container">
        <h1 class="mt-5">Cifrado César</h1>

        <form method="post" class="mt-4">
            <div class="mb-3">
                <label for="mensaje" class="form-label">Mensaje:</label>
                <input type="text" id="mensaje" name="mensaje" class="form-control" required />
            </div>
            <div class="mb-3">
                <label for="n" class="form-label">Valor de n:</label>
                <input type="number" id="n" name="n" class="form-control" min="1" required />
            </div>
            <div class="mb-3">
                <label for="operacion" class="form-label">Operación:</label>
                <select id="operacion" name="operacion" class="form-select" required>
                    <option value="codificar">Codificar</option>
                    <option value="decodificar">Decodificar</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Enviar</button>
        </form>

        @if (Model.Resultado != null)
        {
            <h2 class="mt-5">Resultado:</h2>
            <p>@Model.Resultado</p>
        }
    </div>
</body>
</html>